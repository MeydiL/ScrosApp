<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.CrearProyecto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txt_NombreProyecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/txt_hintNombre"
            android:textColorHint="#78909C"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/txt_DescripcionProyecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/txt_hintDescripcion"
            android:textColorHint="#78909C"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnCrearProyecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/boton_Crear_proyecto"
            android:textSize="25sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>